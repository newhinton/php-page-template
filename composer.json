{
    "name": "slim/slim-skeleton",
    "description": "A Slim Framework skeleton application for rapid development",
    "keywords": [
        "microframework",
        "rest",
        "router",
        "psr7"
    ],
    "homepage": "http://github.com/slimphp/Slim-Skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Josh Lockhart",
            "email": "info@joshlockhart.com",
            "homepage": "http://www.joshlockhart.com/"
        },
        {
            "name": "Pierre Berube",
            "email": "pierre@lgse.com",
            "homepage": "http://www.lgse.com/"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "ext-sqlite3": "*",
        "monolog/monolog": "^1.24",
        "php-di/php-di": "^6.0",
        "phpmailer/phpmailer": "^6.1",
        "setasign/fpdf": "^1.8",
        "slim/psr7": "^0.5",
        "slim/slim": "^4.1",
        "slim/twig-view": "^3.0.0-dev",
        "twbs/bootstrap": "4.4.1",
      "ext-iconv": "*",
      "ext-intl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "sass": " sass --update sass/:public/css/vendor/scss/",
        "sass-w": " sass --watch sass/:public/css/vendor/scss/",
        "test": "phpunit"
    }
}
